{
  "name": "romba-bot",
  "version": "1.2.0",
  "description": "Discord bot for downloading retro games from Myrient",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "test": "echo 'Tests temporarily disabled - to be fixed'",
    "test:ui": "echo 'Tests temporarily disabled - to be fixed'",
    "test:run": "echo 'Tests temporarily disabled - to be fixed'",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "pnpm run build && pnpm run test:run && pnpm run version:minor",
    "release:patch": "pnpm run build && pnpm run test:run && pnpm run version:patch",
    "prepare": "husky"
  },
  "keywords": [
    "discord",
    "bot",
    "retro",
    "games",
    "myrient",
    "romba"
  ],
  "author": "Claude & srizzling",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "cheerio": "^1.0.0",
    "discord.js": "^14.16.3",
    "dotenv": "^17.2.1",
    "fs-extra": "^11.2.0",
    "lowdb": "^7.0.1",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.9.0",
    "@types/progress": "^2.0.7",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  }
}
